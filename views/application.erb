</head>

<body class="preview" data-spy="scroll" data-target=".subnav" data-offset="50">


<!-- Navbar
================================================== -->
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="../"><%= session[:user_name]%></a>

      <div class="nav-collapse" id="main-menu">

      </div>
    </div>
  </div>
</div>

<div class="container">


  <!-- Masthead
 ================================================== -->
  <header class="jumbotron subhead" id="overview">
    <h1>Key Store</h1>

    <p class="lead">Just a simple Sinatra-based sample application.</p>
  </header>

  <form class="well form-search">
    <input type="text" class="big-search" id="searchBox">
    <button type="button" class="btn big" id="searchButton">Search</button>
    <button type="button" class="btn big" id="newButton">New</button>
  </form>

  <div id="alert-area"></div>


  <!-- Footer
 ================================================== -->
  <footer class="footer">
    <p class="pull-right">developed by @inicopaez</p>
  </footer>

</div>
<!-- /container -->

<div class="modal hide" id="noteModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Note</h3>

    <div class="control-group">
      <label class="control-label" for="key">Key</label>

      <div class="controls">
        <input type="text" class="input-xxlarge" id="key">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="value">Value</label>

      <div class="controls">
        <textarea class="input-xxlarge" id="value" rows="4"></textarea>
      </div>
    </div>
  </div>
  <div class="modal-body">

  </div>
  <div class="modal-footer">
    <button class="btn btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-success" id="saveButton">Save changes</button>
  </div>
</div>

